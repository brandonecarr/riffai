{
  "name": "riffai",
  "version": "1.0.0",
  "description": "RiffAI - AI Team Standup Suite for DooGoodScoopers",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win",
    "release": "electron-builder --mac --publish always",
    "release:win": "electron-builder --win --publish always",
    "release:all": "electron-builder --mac --win --publish always"
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "openai": "^4.52.0"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.doogoodscoopers.riffai",
    "productName": "RiffAI",
    "copyright": "Copyright 2024 DooGoodScoopers",
    "mac": {
      "category": "public.app-category.business",
      "artifactName": "RiffAI-latest-universal.dmg",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "artifactName": "RiffAI-Setup-latest.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerSidebar": "assets/nsis-sidebar.bmp",
      "uninstallerSidebar": "assets/nsis-sidebar.bmp",
      "installerHeader": "assets/nsis-header.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RiffAI",
      "license": "LICENSE.txt",
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "title": "Install RiffAI",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 880,
        "height": 495
      },
      "iconSize": 90,
      "contents": [
        {
          "x": 172,
          "y": 120,
          "type": "file"
        },
        {
          "x": 754,
          "y": 366,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/icon.*",
      "assets/logo.png",
      "!assets/icon.iconset",
      "!assets/dmg-background*.png",
      "!assets/nsis-*.bmp",
      "!assets/new_icon.png",
      "!assets/logo_1024.png",
      "!**/node_modules/.cache",
      "!**/*.map"
    ],
    "asar": false,
    "publish": {
      "provider": "github",
      "owner": "brandonecarr",
      "repo": "riffai",
      "releaseType": "release"
    }
  },
  "author": "Brandon - DooGoodScoopers",
  "license": "MIT"
}
